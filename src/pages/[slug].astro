---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import FormattedDate from "../components/FormattedDate.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return [
    {
      params: {
        slug: "guru-nanak-dev-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-nanak-dev-ji"
        ),
        name: "Guru Nanak Dev Ji",
      },
    },
    {
      params: {
        slug: "guru-angad-dev-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-angad-dev-ji"
        ),
        name: "Guru Angad Dev Ji",
      },
    },
    {
      params: {
        slug: "guru-amar-das-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-amar-das-ji"
        ),
        name: "Guru Amar Das Ji",
      },
    },
    {
      params: {
        slug: "guru-ram-das-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-ram-das-ji"
        ),
        name: "Guru Ram Das Ji",
      },
    },
    {
      params: {
        slug: "guru-arjan-dev-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-arjan-dev-ji"
        ),
        name: "Guru Arjan Dev Ji",
      },
    },
    {
      params: {
        slug: "guru-har-gobind-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-har-gobind-ji"
        ),
        name: "Guru Har Gobind Ji",
      },
    },
    {
      params: {
        slug: "guru-har-rai-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-har-rai-ji"
        ),
        name: "Guru Har Rai Ji",
      },
    },
    {
      params: {
        slug: "guru-har-krishan-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-har-krishan-ji"
        ),
        name: "Guru Har Krishan Ji",
      },
    },
    {
      params: {
        slug: "guru-tegh-bahadur-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-tegh-bahadur-ji"
        ),
        name: "Guru Tegh Bahadur Ji",
      },
    },
    {
      params: {
        slug: "guru-gobind-singh-ji",
      },
      props: {
        posts: posts.filter(
          (post) => post.data.sikhGuruJiSlug === "guru-gobind-singh-ji"
        ),
        name: "Guru Gobind Singh Ji",
      },
    },
  ];
}

const { posts, name } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      .main-title {
        margin: 0;
        margin-bottom: 2rem;
        color: rgb(var(--black));
        line-height: 1;
        text-align: center;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h4 class="main-title">{name}</h4>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/saakhi/${post.slug}`}>
                  <img
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt=""
                  />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
